<% if user_signed_in? %>
    <div class="info sticky">
        <%User.all.each do |u| %>
            <% unless u.followed_by?(current_user) %>
                <% unless current_user == u %>
                    <%= u.name %>
                    <%= form_tag follow_user_path, method: :post do %>
                        <%= hidden_field_tag :follow_id, u.id %>
                        <%= submit_tag "Follow", class: "btn btn-info" %>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
    </div>
<% end %>