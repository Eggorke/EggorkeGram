<%= form_for @post do |f| %>

    <%= render 'shared/error_messages' %>    
    
    Current title:  <%= @post.title %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    Current picture: <%= image_tag @post.image_url, :class => "img-post-feed" %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image, value: @post.cached_image_data %>

    Current description: <%= @post.comment %>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
    
    <%= f.submit %>

    <%= link_to "Delete post", @post, method: :delete, data: {confirm: "Are you sure?"} %>


<% end %>