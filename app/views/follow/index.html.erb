<div class="container mt-5">
    <div class="row">
        <div class="col-6 ">
            <p>Followings:</p>
            <% @following.each do |f| %>
                <%= link_to f.name, f %>
                <%= form_tag unfollow_user_path, method: :post do %>
                    <%= hidden_field_tag :unfollow_id, f.id %>
                    <%= submit_tag "Unfollow", class: "btn btn-danger" %>
                <% end %>
                <br>

            <% end %>
        </div>
        <div class="col-6 ">
            <p>Followers:</p>
            <% @followers.each do |f| %>
                <%= link_to f.name, f %> <br>
            <% end %>
        </div>
    </div>
</div>