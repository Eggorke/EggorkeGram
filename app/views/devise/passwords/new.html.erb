<div class="container login-container">
<div class="row mb-5 center text-center"><h2>Forgot your password?</h2></div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field row mb-5">
    <!-- <%= f.label :email %><br /> -->
    <div class="col-sm center"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", :class => "enter-field" %></div>
  </div>

  <div class="actions row mb-5 center text-center">
    <%= f.submit "Send me reset password instructions", :class => "btn btn-secondary reset-pass-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>